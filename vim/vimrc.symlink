let g:netrw_liststyle = 3
let g:netrw_winsize=20
let g:netrw_localrmdir='rm -r'
nnoremap <leader>n :Lexplore<CR>

" fugitive

vnoremap <leader>gb :Gblame<CR>
nnoremap <leader>gb :Gblame<CR>

